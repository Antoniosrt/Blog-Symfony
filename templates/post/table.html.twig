{% extends '/base.html.twig' %}
{% block body %}
    <div class="container-fluid  m-0 p-0 ">
    <div class="row no-gutters">
    <div class="col-sm-2 text-center justify-content-center p-0" >
        <nav class=" d-flex flex-column header   ">
            <a class="navbar-brand mt-5"><h1> Blogspot</h1></a>
            <label class="mt-5"><h4>Categorias:</h4></label>

            <ul class="nav flex-column justify-content-center mt-2 text-center navbar-light ">
                <li class="nav-item ml-0">
                    <a class="nav-link active" href="/">Inicio</a>
                </li>
                <li class="nav-item ml-0">
                    <a class="nav-link active" href="#">Filmes</a>
                </li>
                <li class="nav-item ml-0">
                    <a class="nav-link active" href="#">Series</a>
                </li>
                <li class="nav-item ml-0">
                    <a class="nav-link active" href="#">Documentarios</a>
                </li>
                <li class="nav-item ml-0">
                    <a class="nav-link active" href="#">Musica</a>
                </li>
                <label class="mt-3"><h4>Gerenciamento:</h4></label>
                <li class="mt-0">
                    <a class="nav-link" href="/categoria/lista_categoria" >Categorias </a>
                </li>
                <li class="mt-1">
                    <a class="nav-link" href="/categoria/newCategoria" >Adicionar Categorias </a>
                </li>
                <li class="mt-1">
                    <a class="nav-link" href="/post/table" >Posts </a>
                </li>
                <li class="mt-1">
                    <a class="nav-link" href="/post/post_create" >Adicionar Posts </a>
                </li>
            </ul>
        </nav>
    </div>

    <div class="col-sm-10">
        <table class="table  table-striped text-white" id="post">
            <thead class="thead-light">
            <tr>
                <th >
                    <h4>Nome</h4>
                </th>
                <th>
                    Descrição
                </th>
                <th class="ml-auto">
                    <h4>Opções</h4>
                </th>
            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td class="text-white">
                        {{ post.title }}
                    </td>s
                    <td class="text-white">
                        {{ post.descricao }}
                    </td>
                    <td >
                        <a href="/post/edit/{{ post.id }}" class="btn btn-warning">Editar</a>

                        <a class="btn btn-danger delete"  data-id="{{ post.id }}">Deletar</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    </div>
{% endblock %}